{
    "tasks": {
        "dev": "deno run -A --watch main.ts",
        "edgedb:start": "edgedb instance start -I universalmusic",
        "edgedb:stop": "edgedb instance stop -I universalmusic"
    },
    "compilerOptions": {
        "lib": ["deno.window", "webworker", "esnext"]
    },
    "importMap": "./import-map.json",
    "fmt": {
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true
    }
}
